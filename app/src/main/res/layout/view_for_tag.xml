<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/carrot_left"
        android:layout_width="@dimen/dp22"
        android:layout_height="@dimen/dp20"
        android:background="@drawable/carrot_left_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/carrot_top"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center"
            android:background="@drawable/carrot_top_shape"
            android:gravity="center"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_text_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tag_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tagging_is_my_life"
                android:textColor="#FFF"
                android:textSize="@dimen/sp14" />

            <com.harsh.instagramtagview.SquareImageView
                android:id="@+id/remove_tag_image_view"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/ic_remove_tag"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/carrot_bottom"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center"
            android:background="@drawable/carrot_bottom_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/carrot_right"
        android:layout_width="@dimen/dp22"
        android:layout_height="@dimen/dp20"
        android:background="@drawable/carrot_right_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible" />

</LinearLayout>